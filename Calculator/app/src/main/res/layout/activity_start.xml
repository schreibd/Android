<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    tools:context="ema.hochschule_trier.de.calculator.StartActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder"
        android:id="@+id/display"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="C"
            android:id="@+id/delete"
            android:layout_weight="1"
            android:longClickable="true"
            android:onClick="clearSymbol" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+ / -"
            android:id="@+id/prefix"
            android:layout_weight="1"
            android:onClick="changeSuffix" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="â‚¬"
            android:id="@+id/euro"
            android:layout_weight="1"
            android:onClick="calculateEuro" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="/"
            android:id="@+id/divide"
            android:layout_weight="1"
            android:onClick="NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="7"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="8"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="9"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="*"
            android:id="@+id/mulitply"
            android:layout_weight="1"
            android:onClick="NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="4"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="5"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="6"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="+"
            android:id="@+id/plus"
            android:layout_weight="1"
            android:onClick="NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="1"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="2"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="-"
            android:id="@+id/minus"
            android:layout_weight="1"
            android:onClick="NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="0"
            android:id="@+id/button0"
            android:layout_weight="2"
            android:onClick="NumberButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="."
            android:id="@+id/point"
            android:layout_weight="3"
            android:onClick="makeFloat" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="="
            android:id="@+id/result"
            android:layout_weight="3"
            android:onClick="calculateResult" />
    </LinearLayout>

</LinearLayout>
